<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="org.ssmm2.example.persistence.mapper.UserGroupMapper" >
  <insert id="save" parameterType="hashmap">
  	<foreach item="item" index="index" collection="array"   separator="," >
    	INSERT INTO TB_USER_GROUP(NAME,REMARK)VALUES(
    		#{item.NAME,jdbcType=VARCHAR},
    		#{item.REMARK,jdbcType=VARCHAR}
    		)
  	</foreach>
  </insert>

  <delete id="deleteByIds" parameterType="string">
  	  DELETE FROM TB_USER_GROUP WHERE ID IN
      <foreach item="item" index="index" collection="array" open="("  separator="," close=")" >
    	#{item}
      </foreach>
  </delete>
  
  <delete id="deleteByExamples" parameterType="hashmap">
  	  DELETE FROM TB_USER_GROUP WHERE ID IN
      <foreach item="item" index="index" collection="array" open="("  separator="," close=")" >
    	#{item.ID}
      </foreach>
  </delete>
  
  <update id="update" parameterType="hashmap">
  	<foreach item="item" index="index" collection="array"  separator=","  >
      UPDATE TB_USER_GROUP SET 
      	NAME=#{item.NAME},
      	MEMARK=${item.REMARK} 
      WHERE ID =${item.ID}
    </foreach>
  </update>
  
  <select id="findByIds" resultType="string">
  	SELECT * FROM TB_USER_GROUP 
  		<if test="ID!=null">
  		WHERE ID IN
  		<foreach item="item" index="index" collection="array" close="("  separator="," open=")">
  		  #{item}
  		</foreach>
  		</if>
  </select>
  
  <select id="conut" resultType="long">
     SELECT count(*) FROM TB_USER_GROUP
  </select>
  
</mapper>

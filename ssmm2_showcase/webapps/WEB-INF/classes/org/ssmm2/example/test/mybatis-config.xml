<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd" >
<configuration>
 <environments default="derbysource">
		<environment id="derbysource">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.apache.derby.jdbc.ClientDriver" />
				<property name="url" value="jdbc:derby://127.0.0.1/sshd" />
				<property name="username" value="sa" />
				<property name="password" value="123456" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="org/ssmm2/example/persistence/xml/User.xml" />
		<mapper resource="org/ssmm2/example/persistence/xml/UserGroup.xml" />
	</mappers>
</configuration>
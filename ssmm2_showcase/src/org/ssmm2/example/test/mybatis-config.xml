<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd" >
<configuration>
 <environments default="derbysource">
		<environment id="derbysource">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
				<property name="poolMaximumActiveConnections" value="15"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="org/ssmm2/persistence/xml/User.xml" />
		<mapper resource="org/ssmm2/persistence/xml/Group.xml" />
	</mappers>
</configuration>